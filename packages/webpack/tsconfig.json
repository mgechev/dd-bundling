{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "..",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "lib": ["es2015", "esnext", "dom"],
    "paths": {
      "@mlx/parser": ["parser"],
      "@mlx/cluster": ["cluster"],
      "@mlx/ga": ["ga"]
    }
  },
  "files": ["index.ts"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
